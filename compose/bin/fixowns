#!/bin/bash
set -o errexit
echo "Correcting filesystem ownerships..."
__dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
if [ -z "$1" ]; then
  "${__dir}/rootnotty" chown -R app:app /var/www/
else
  "${__dir}/rootnotty" chown -R app:app /var/www/html/"$1"
fi

echo "Filesystem ownerships corrected."
