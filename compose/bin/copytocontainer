#!/bin/bash
set -o errexit
set -o errtrace
set -o pipefail

[ -z "$1" ] && echo "Please specify a directory or file to copy to container (ex. vendor, --all)" && exit
__dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REAL_SRC="${__dir}/../src"
if [ "$1" == "--all" ]; then
  docker cp "$REAL_SRC/./" $(docker-compose -f "${__dir}/../docker-compose.yml" -f "${__dir}/../docker-compose.dev.yml" ps -q phpfpm|awk '{print $1}'):/var/www/html/
  echo "Completed copying all files from host to container"
  "${__dir}/fixowns"
  "${__dir}/fixperms"
else
  if [ -f "$REAL_SRC/$1" ]; then
    docker cp "$REAL_SRC/$1" $(docker-compose -f "${__dir}/../docker-compose.yml" -f "${__dir}/../docker-compose.dev.yml" ps -q phpfpm|awk '{print $1}'):/var/www/html/"$1"
  else
    docker cp "$REAL_SRC/$1" $(docker-compose -f "${__dir}/../docker-compose.yml" -f "${__dir}/../docker-compose.dev.yml" ps -q phpfpm|awk '{print $1}'):/var/www/html/"$(dirname "$1")"
  fi
  echo "Completed copying $1 from host to container"
  "${__dir}/fixowns" "$1"
  "${__dir}/fixperms" "$1"
fi
