#!/bin/bash
__dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
if ! "${__dir}/clinotty" ls bin/n98-magerun2.phar 1> /dev/null 2>&1; then
  "${__dir}/clinotty" mkdir -p bin
  "${__dir}/clinotty" curl https://files.magerun.net/n98-magerun2.phar -o bin/n98-magerun2.phar
  "${__dir}/clinotty" chmod +x bin/n98-magerun2.phar
fi
"${__dir}/cli" bin/n98-magerun2.phar "$@"
