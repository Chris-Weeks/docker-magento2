#!/bin/bash
set -o nounset
set -o pipefail
[ -z "$1" ] && echo "Please specify a directory or file to copy from container (ex. vendor, --all)" && exit
__dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REAL_SRC="${__dir}/../src"
if [ "$1" == "--all" ]; then
  docker cp "$(docker-compose -f "${__dir}/../docker-compose.yml" \
    -f "${__dir}/../docker-compose.dev.yml" ps -q phpfpm|awk '{print $1}')":/var/www/html/./ "$REAL_SRC/"
  echo "Completed copying all files from container to host"
else
  set -o errexit
  if [ -f "$1" ] ; then
    docker cp "$(docker-compose -f "${__dir}/../docker-compose.yml" \
      -f "${__dir}/../docker-compose.dev.yml" ps -q phpfpm|awk '{print $1}')":/var/www/html/"$1" "$REAL_SRC/$1"
  else
    docker cp "$(docker-compose -f "${__dir}/../docker-compose.yml" \
    -f "${__dir}/../docker-compose.dev.yml" ps -q phpfpm|awk '{print $1}')":/var/www/html/"$1" "$REAL_SRC/$(dirname "$1")"
  fi
  echo "Completed copying $1 from container to host"
fi
